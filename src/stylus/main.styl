@require "reset"
@require "variables"
@require "fonts"
@require "typography"
@require "animations"
// General
*
	box-sizing: border-box

::selection
	background-color: alpha(color-primary, 0.4)

html,
body
	display: block
	min-height: 100%
	width: 100%
	background: color-bg
	background: color-bg
	font: font-size font-stack
	color: color-text
	border: 0.33rem solid color-primary-light
.wrap
	display: block
	margin: auto
	max-width: size-page-max-width
	padding: size-page-padding
	animation: fade-in anim-timing * 3 ease-in-out

// Header
header
	display: block
	text-align: left
	margin-top: size-header-margin
	animation: curtain-reveal anim-timing * 3 ease-in-out anim-timing
	animation-fill-mode: both
	.aligned-content
		display: inline-block
	h1
		display: inline-block
		a
			display: inline-block
			position: relative
			width: auto
			// padding: size-header-title-padding
			font-size: font-size * 2
			text-decoration: none
			&::before
				content: ""
				display: inline-block
				position: absolute
				z-index: -1
				margin-top: 0.5em
				height: 0.5em
				width: 100%
				background: color-primary-light
	nav
		margin: size-header-margin 0 (size-header-margin / 2) 0
		display: inline-block
		display: flex
		ul
			flex-grow: 1
			width: 0
			display: flex
			justify-content: space-between
			margin-top: size-header-link-margin
			li
				display: inline-block
				a
					background: color-bg-dark-1
					padding: size-header-link-padding
					text-decoration: none
					border-radius: size-border-radius
h2, h3, h4
	display: inline-block
	position: relative
	animation: curtain-reveal anim-timing * 3 ease-in-out anim-timing * 2
	animation-fill-mode: both
h2::before
	content: ""
	display: inline-block
	position: absolute
	z-index: -1
	margin-top: 0.7em
	height: 0.3em
	width: 100%
	background: color-alert-light
h3, h4
	display: block
p
	animation: curtain-reveal anim-timing * 3 ease-in-out anim-timing * 3
	animation-fill-mode: both
// Email block
.email
	display: block
	text-align: center
	font-size: font-size * 0.9
	font-family: font-code
	padding: size-email-padding
	margin-top: size-email-padding
	background-color: color-bg-light
	border-radius: size-border-radius

// Footer
footer
	display: block
	color: color-text-light
	font-size: font-size * 0.8
	text-align: center
	margin-top: size-footer-margin
