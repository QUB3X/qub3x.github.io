@require "reset"
@require "fonts"
@require "animations"

font-stack = Charter, serif
// font-stack-accent = Jost, Futura, sans-serif
font-size = 1.1rem

color-bg = #fffaf2
color-text = #063d33

color_b = 0.17

colors = {
    yellow: #f4ad42,
    green: #6ad676,
    red: #ce406a,
    blue: #77bdff,
    purple: #ba70d1
}

for key, value in colors
    .{key}
        color value
    .t-{key}
        background-color alpha(value, 0.33)
        background linear-gradient(45deg, alpha(darken(value, 20%), 0.50) 0%, alpha(value, 0.10) 100%)
        border-radius 3px
        padding 0 4px

// Width of the page
max-w = 28em


h-font-size = font-size * 1.2
h-margin = 1.5em
h-padding = h-margin - h-font-size

s-padding = 3 * font-size

p-padding = 1em

timing = 0.13s

// General
*
    box-sizing border-box

::selection
    background-color darken(color-bg, 5%)

html,
body
    display block
    min-height 100%
    width 100%
    background color-bg
    font font-size font-stack
    color color-text

.wrap
    display block
    margin auto
    max-width max-w
    padding 0 (font-size/2)
    animation: fade-in timing * 3 ease-in-out

// Header
header
    margin-top: h-margin
    h1
        display block
        color color-text
        a
            display block
            padding h-padding 0
            color color-text
            font-weight: bold
            line-height: 1em
            text-decoration none
    nav
        display block
        ul
            padding: 0
            display block
            li
                display block
                a
                    display block
                    width 100%
                    text-align left
                    font-size h-font-size * 0.85
                    padding h-padding 0
                    text-decoration none
                    transition-mixin(timing)
                    &:hover,
                    &:focus,
                    &:active
                        color: red
// Content             
.s
    position relative
    h2
        margin s-padding 0 (s-padding/2) 0
    h2::before
        content ""
        position absolute
        display block
        height 3em
        width 3em
        background-size 3em 3em
        background-repeat no-repeat
        transform translate(-25%, -27%)
        opacity 0.3
    p
        display block
        margin 0.5em 0
    .email
        display block
        text-align center
        color alpha(color-text, 0.66)

// Portfolio 
.p-list
    padding p-padding
    li
        margin-bottom s-padding
        h3
            display block
        h3::before
            s = 3em
            content ""
            position absolute
            display block
            height s
            width s
            background-size s s
            background-repeat no-repeat
            transform translate(-30%, -27%)
            background-image url(../assets/images/poly_4.svg)
            opacity 0.3

// Background Heading .s
.bio h2::before
    background-image url(../assets/images/poly_1.svg)
.portfolio h2::before
    background-image url(../assets/images/poly_2.svg)
.contact h2::before
    background-image url(../assets/images/poly_3.svg)

footer
    footer-color = alpha(color-text, 0.33)
    border-top 1px solid footer-color
    margin-top 2em
    padding 0.5em 0
    text-align center
    color footer-color

// TYPOGRAPHY
h1
    font-size h-font-size
    font-weight bold
h2
    font-size font-size * 1.2
    font-weight bold
h3
    font-size font-size * 1.1
    font-weight bold
p
    font-size font-size
    font-weight normal
    line-height 1.5em
a
    text-decoration underline
    color color-text
