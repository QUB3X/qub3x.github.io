@require "reset"
@require "variables"
@require "fonts"
@require "typography"
@require "animations"
// General
*
    box-sizing border-box

::selection
    background-color darken(color-bg, 5%)

html,
body
    display block
    min-height 100%
    width 100%
    background color-bg
    font font-size font-stack
    color color-text

.wrap
    display block
    margin auto
    max-width max-w
    padding 0 (font-size/2)
    animation: fade-in timing * 3 ease-in-out

